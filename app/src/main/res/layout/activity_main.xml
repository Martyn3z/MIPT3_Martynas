<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:backgroundTint="#272727"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/MainScreen"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_span="5"
                android:background="#323131"
                android:backgroundTint="#979797"
                android:gravity="bottom|end"
                android:text="0"
                android:textIsSelectable="false"
                android:textSize="48sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="MC"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonRecall"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="MR"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonStore"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="MS"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="M+"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonRemove"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="M-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="←"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="CE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonEmpty"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonModule"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="±"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonRoot"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="√"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#C87575"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#C87575"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonFraction"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#803A3A"
                android:gravity="center_horizontal|center_vertical"
                android:text="1/x"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#C87575"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonCount"
                android:layout_width="70dp"
                android:layout_height="130dp"
                android:layout_gravity="fill"
                android:layout_span="1"
                android:layout_weight="2"
                android:backgroundTint="#803A3A"
                android:enabled="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="323dp"
            android:layout_height="86dp"
            android:layout_marginTop="-65dp">

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="140dp"
                android:layout_height="65dp"
                android:layout_span="2"
                android:backgroundTint="#AC5454"
                android:enabled="false"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#AC5454"
                android:gravity="center_horizontal|center_vertical"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:backgroundTint="#C87575"
                android:enabled="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>